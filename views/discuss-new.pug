extends layout

block content
    -var currentItem = '论坛';
    include navbar
    .container.mt-5.mb-5
        strong 输入标题
        button#discuss-create.btn.btn-secondary.btn-sm.float-right 确认发布
        input#discuss-title.form-control.form-control-sm.mt-3.mb-2
        strong 输入正文
            span#help-info(data-toggle="tooltip" title="此文本编辑器采用原生Markdown语法,支持语法高亮。更多关于Markdown文本格式请参考https://markdown-zh.readthedocs.io/en/latest/")
                span.badge.badge-success ?
        .row.mt-2
            .col-6.mr-0.pr-0
                pre#discuss-editor.border.border-gray.rounded-left(style="width: 100%; height: 600px")
            .col-6.ml-0.pl-0
                article#discuss-preview.border.border-gray.rounded-right.markdown-body.pl-2.pr-2(style="width: 100%; height: 600px; font-size: 14px; overflow-y: scroll")
    include footbar

    script(src='https://cdnjs.cloudflare.com/ajax/libs/showdown/1.8.6/showdown.js')
    script(src='/javascripts/ace/ace.js')
    script(src='/javascripts/custom/bundle.discuss.new.js')