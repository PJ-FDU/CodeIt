extends layout

block content
    -var currentItem = '论坛';
    include navbar
    .container.mt-5.mb-5
        .card
            #discuss-title.card-header 无标题
            ul#discuss-list.list-group.list-group-flush
        .card.mt-3.pb-0
            .card-header
                span#info(data-toggle="tooltip" title="此文本编辑器采用原生Markdown语法,支持语法高亮。更多关于Markdown文本格式请参考https://markdown-zh.readthedocs.io/en/latest/" style="height: 31px; line-height: 31px") 在这里输入回复
                    span.badge.badge-success ?
                button#reply-create.btn.btn-sm.btn-secondary.float-right(type='button') 提交回复
            .card-body.m-0.p-0
                .row.m-0.p-0
                    .col-6.m-0.p-0
                        pre#reply-editor.border.border-gray.m-0(style="width: 100%; height: 400px")
                    .col-6.m-0.p-0
                        article#reply-preview.border.border-gray.markdown-body.pl-2.pr-2.m-0(style="width: 100%; height: 400px; font-size: 14px; overflow-y: scroll")

    include footbar

    script(src='https://cdnjs.cloudflare.com/ajax/libs/showdown/1.8.6/showdown.js')
    script(src='/javascripts/ace/ace.js')
    script(src='/javascripts/custom/bundle.discuss.detail.js')
